<Page x:Class="UniversityAdmissionCommittee.SearchEnlistedApplicantsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniversityAdmissionCommittee"
      mc:Ignorable="d" 
      d:DesignHeight="120" d:DesignWidth="850"
      Title="SearchEnlistedApplicantsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label  Grid.Row="0" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" >Факультет:</Label>
        <ComboBox x:Name="facultyNameComboBox" Grid.Row="0" Grid.Column="1" FontSize="14" VerticalAlignment="Center" Margin="3" SelectionChanged="FacultyNameComboBox_SelectionChanged"></ComboBox>
        <Label  Grid.Row="1" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" >Кафедра:</Label>
        <ComboBox x:Name="departmentNameComboBox" Grid.Row="1" Grid.Column="1" FontSize="14" VerticalAlignment="Center" Margin="3"></ComboBox>
    </Grid>
</Page>
