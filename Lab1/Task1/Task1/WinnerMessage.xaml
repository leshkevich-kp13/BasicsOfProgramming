<Window x:Class="Task1.WinnerMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinnerMessage"
        MinHeight="200"
        MinWidth="300"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" 
        FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}">

    <Grid Background="#FF16CA32">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="Message_Label" HorizontalAlignment="Center" FontFamily="Segoe Print" FontSize="36" FontWeight="Bold" Foreground="White"></Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="OK_Btn" Grid.Column="1" Margin="5" Background="Green" Foreground="White" FontFamily="Segoe Print" FontSize="20" FontWeight="Bold" Click="OK_Btn_Click">OK</Button>
        </Grid>
    </Grid>
</Window>
